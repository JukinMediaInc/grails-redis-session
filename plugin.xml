<plugin name='redis-database-session' version='1.2.1' grailsVersion='2.0 &gt; *'>
  <author>Roberto Perez Alcolea</author>
  <authorEmail>roberto@perezalcolea.info</authorEmail>
  <title>Redis Session Plugin</title>
  <description>Stores HTTP sessions in a Redis data store.
</description>
  <documentation>http://grails.org/plugin/grails-redis-session</documentation>
  <type>RedisDatabaseSessionGrailsPlugin</type>
  <resources>
    <resource>grails.plugin.redissession.GsonService</resource>
    <resource>grails.plugin.redissession.RedisPersistentService</resource>
    <resource>grails.plugin.redissession.RedisSessionCleanupService</resource>
  </resources>
</plugin>